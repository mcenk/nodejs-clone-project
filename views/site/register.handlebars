<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">CONTACT</h1>
</section>
    
    <!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">Kayıt Ol</h2>
					</div>
				</div>
			</div>
 
		<div class="row">
			<div class="col-lg-12">
				<form id="registerForm" name="sentRegister" novalidate="novalidate">
					<div class="row">
						<div class="offset-2 col-md-8">
                            
                            <div class="form-group">
							    <input class="form-control" id="username" type="text" placeholder="UserName *" required="required" data-validation-required-message="Lütfen isminizi giriniz">
						    	<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" id="email" type="email" placeholder="Email *" required="required" data-validation-required-message="Lütfen e-mail adresinizi giriniz">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" id="password" type="password" placeholder="Password *" required="required" data-validation-required-message="Lütfen sifrenizi adresinizi giriniz">
								<p class="help-block text-danger"></p>
							</div>
						</div>
					
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button id="sendRegisterButton" class="main-btn" type="submit">Tamam</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>